<h1>New <%= type %></h1>

<form id="new-<%= type.toLowerCase() %>" name="<%= type %>">
  <div class="field">
    <label for="name"> name:</label>
    <input type="text" name="name" id="name" value="<%= name %>" >
  </div>

  <div class="actions">
    <input type="submit" value="Create <%= type %>" />
  </div>

</form>